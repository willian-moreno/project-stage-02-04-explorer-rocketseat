{
	"html.format.wrapAttributes": "force",
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.detectIndentation": false,
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"files.encoding": "utf8"
	},
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features",
		"editor.detectIndentation": false,
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"files.encoding": "utf8"
	}
}
